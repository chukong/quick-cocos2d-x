<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >

    <include
        android:id="@+id/umeng_socialize_title"
        layout="@layout/umeng_socialize_titile_bar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/umeng_socialize_list_item_bgcolor"
         >

        <ScrollView
            android:id="@+id/umeng_xp_ScrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:scrollbars="none" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp" >

                <TextView
                    android:id="@+id/umeng_socialize_first_area_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:paddingLeft="26dp"
                    android:text="分享到"
                    android:textColor="#84898f"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/umeng_socialize_first_area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/umeng_socialize_first_area_title"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/umeng_socialize_second_area_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/umeng_socialize_first_area"
                    android:layout_marginTop="18dp"
                    android:paddingLeft="26dp"
                    android:text="分享到"
                    android:visibility="gone"
                    android:textColor="#84898f"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/umeng_socialize_second_area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/umeng_socialize_second_area_title"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>